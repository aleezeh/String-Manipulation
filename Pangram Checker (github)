Module Module1

    Sub Main()
        Dim Str1, Str2, Str3 As String
        Dim Count As Integer
        Dim nextChar As String
        Dim isPangram As Boolean

        Str1 = ""
        Str2 = ""
        Count = 0
        nextChar = ""
        Str3 = "abcdefghijklmnopqrstuvwxyz"
        isPangram = False

        Console.Write("Enter string to check: ")
        Str1 = Console.ReadLine

        For Count = 1 To Len(Str1)
            nextChar = LCase(Mid(Str1, Count, 1))
            Str2 = Str2 & nextChar
        Next

        For Count = 1 To Len(Str2)
            nextChar = Mid(Str2, Count, 1)
        Next


        If isPangram Then
            Console.WriteLine("Yes, it is a Pangram.")
        Else
            Console.WriteLine("No, it is not a Pangram.")
        End If

        Console.ReadKey()

    End Sub

End Module
